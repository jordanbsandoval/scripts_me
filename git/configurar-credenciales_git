#!/bin/bash
# Configurar usuario y contrasena de github
# Editando el archivo donde se almacenan estas credencials
cat > ~/.git-credentials
# @1: nombre de usuarios github
# @2: Token personal access
# @3: correo asociado en github
https://$1:$2@github.com
exit
git config --global user.email "$3"
git config --global user.name "$1"
git config --global credential.helper store

